extends ../layout
block content
   div.container
      div.content
            a(href="/") << Back to home
            h3 List of #{users.length} people that signed up
            ul
               for user in users
                   li
                        if user.displayName === ''
                            | #{user.email}&nbsp;
                        else
                            | #{user.displayName}&nbsp;

                        if isAdmin
                            a(href="/users/#{user.id}/delete") Disable


   footer.footer
      div.container
         p.text-muted Developed by #[a(href="mailto:josef.nevoral@gmail.com") Josef Nevoral]